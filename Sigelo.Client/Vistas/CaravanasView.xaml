                    IsEnabled="{Binding ConverterParameter=93D5F49B-09BE-43A7-8DC9-FE31098E2052,
                                        Converter={StaticResource convertidorAutorizacion},
                                        Mode=OneWay}"
                    Style="{StaticResource MenuButton}"
                    x:FieldModifier="private" />
            <Path Width="0.64" Height="40" Margin="2,0" VerticalAlignment="Center" Data="F1 M 86.7537,131.483L 86.7537,137.337" Stretch="Fill" StrokeLineJoin="Round" StrokeThickness="0.640055">
                <Path.Stroke>
