            <Button x:Name="FinRecorridoButton" Width="120"
                    Command="{Binding Path=NavgationCommand}"
                    CommandParameter="{x:Static local:OpcionesNavegacion.FinRecorrido}"
                    Content="Fin del recorrido" Foreground="White"
                    IsEnabled="{Binding ConverterParameter=704C2CFB-5460-4CBE-AD33-A08BABE84F58,
                                        Converter={StaticResource convertidorAutorizacion},
                                        Mode=OneWay}"
                    Style="{StaticResource MenuButton}"
