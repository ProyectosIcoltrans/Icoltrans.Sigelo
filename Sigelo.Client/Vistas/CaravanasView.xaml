        <StackPanel x:Name="ActualizarStackPanel" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="1" Margin="0,0,5,8" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:FieldModifier="private" Height="46" Width="31">
