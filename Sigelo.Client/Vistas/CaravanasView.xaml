                      Background="{StaticResource BackgroundBrush}"
                      BorderBrush="Silver" BorderThickness="1" Cursor="SizeNS" ResizeDirection="Rows" Grid.RowSpan="2" />
        <GridSplitter Grid.Row="2" Grid.Column="0" Width="5" Margin="0"
                      Background="{StaticResource BackgroundBrush}"
                      BorderBrush="Silver" BorderThickness="1" Cursor="SizeWE" ResizeDirection="Columns" />
