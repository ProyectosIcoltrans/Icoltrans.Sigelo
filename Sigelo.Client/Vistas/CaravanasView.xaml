                    IsEnabled="{Binding ConverterParameter=28677578-780D-4104-AC87-C2D25F70B3BE,
                                        Converter={StaticResource convertidorAutorizacion},
                                        Mode=OneWay}"
                    Style="{StaticResource MenuButton}"
                    x:FieldModifier="private" />
            <Path Width="0.64" Height="40" Margin="2,0" VerticalAlignment="Center" Data="F1 M 86.7537,131.483L 86.7537,137.337" Stretch="Fill" StrokeLineJoin="Round" StrokeThickness="0.640055">
                <Path.Stroke>
                    <LinearGradientBrush StartPoint="0.465295,0.0505441" EndPoint="0.465295,0.943124">
                        <GradientStop Offset="0" Color="#00FFFFFF" />
                        <GradientStop Offset="0.493023" Color="#FFD4D4D4" />
                        <GradientStop Offset="1" Color="#00FFFFFF" />
